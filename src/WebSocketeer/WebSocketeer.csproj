<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <RootNamespace>Devlooped.Net</RootNamespace>
    <PackageId>WebSocketeer</PackageId>
    <ImplicitUsings>true</ImplicitUsings>
    <Description>High-performance intuitive API for Azure Web PubSub protobuf subprotocol</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="all" />
    <PackageReference Include="System.IO.Pipelines" Version="5.0.1" />

    <PackageReference Include="Google.Protobuf" Version="3.18.0" />
    <PackageReference Include="Grpc.AspNetCore" Version="2.38.0" Pack="false" />

    <PackageReference Include="RxFree" Version="1.0.5" PrivateAssets="all" />
    <PackageReference Include="WebSocketChannel" Version="0.9.2" />

    <PackageReference Include="Azure.Messaging.WebPubSub" Version="1.0.0-beta.3" />
  </ItemGroup>
  
  <ItemGroup>
    <Protobuf Include="*.proto" GrpcServices="Client" />
    <Using Include="System.Buffers" />
    <Using Include="System.IO.Pipelines" />
    <Using Include="System.Net.WebSockets" />
    <Using Include="System.Threading.Channels" />
    <Using Include="Google.Protobuf" />
    <Using Include="Azure.Messaging.WebPubSub.Protobuf" />
  </ItemGroup>

</Project>
